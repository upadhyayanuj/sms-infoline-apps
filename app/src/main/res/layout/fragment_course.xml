<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragment.FragmentCourse">

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView_vision">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view_vision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/vision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="GRADUATE PROGRAMMES"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        />
                    <View
                        android:id="@+id/sp5"
                        android:layout_below="@id/vision"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#df2117"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vision"
                        android:id="@+id/bcom"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_margin="0dp"
                        android:padding="10dp"
                        android:text="Bachelor of Commerce"/>
                    <View
                        android:layout_below="@+id/bcom"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#f5e93a"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bcom"
                        android:id="@+id/baf"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_margin="0dp"
                        android:padding="10dp"
                        android:text="Bachelor of Commerce (Accounting and Finance)"/>
                    <View
                        android:layout_below="@+id/baf"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#f5e93a"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/baf"
                        android:id="@+id/bbi"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_margin="0dp"
                        android:padding="10dp"
                        android:text="Bachelor of Commerce (Banking and Insurance)"/>
                    <View
                        android:layout_below="@+id/bbi"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#f5e93a"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bbi"
                        android:id="@+id/bms"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_margin="0dp"
                        android:padding="10dp"
                        android:text="Bachelor of Management Studies"/>
                    <View
                        android:layout_below="@+id/bms"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#f5e93a"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bms"
                        android:id="@+id/bmm"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_margin="0dp"
                        android:padding="10dp"
                        android:text="Bachelor of Mass Media"/>
                    <View
                        android:layout_below="@+id/bmm"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#f5e93a"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bmm"
                        android:id="@+id/bscit"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_margin="0dp"
                        android:padding="10dp"
                        android:text="Bachelor of Science (Information Technology)"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view_mission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/card_view_vision"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/mission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="POST GRADUATE PROGRAMMES"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        />
                    <View
                        android:id="@+id/sp6"
                        android:layout_below="@id/mission"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#df2117"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mission"
                        android:id="@+id/Mcom"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_margin="0dp"
                        android:padding="10dp"
                        android:text="Master of Commerce"/>
                    <View
                        android:layout_below="@+id/Mcom"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#f5e93a"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Mcom"
                        android:id="@+id/Mscit"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_margin="0dp"
                        android:padding="10dp"
                        android:text="Master of Science (Information Technology)"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view_obj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/card_view_mission"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/objec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="OTHER PROGRAMS"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        />
                    <View
                        android:id="@+id/sp7"
                        android:layout_below="@id/objec"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#df2117"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/objec"
                        android:id="@+id/obj_d1"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="PH.D. CENTRE  IN COMMERCE"

                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
