<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragment.CollegeVisionFragment">

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView_vision">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view_vision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/vision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Vision"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="30dp" />
                    <View
                        android:id="@+id/sp1"
                        android:layout_below="@id/vision"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#ffe203">

                    </View>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vision"
                        android:id="@+id/vision_d"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="'Personality Development for Nation Building'"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view_mission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/card_view_vision"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/mission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Mission"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="30dp" />

                    <View
                        android:id="@+id/sp2"
                        android:layout_below="@id/mission"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#ffe203">

                    </View>

                    <me.biubiubiu.justifytext.library.JustifyTextView
                        android:id="@+id/mission_d1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mission"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="To enable Young minds to discover and develop their potential in an environment conducive to learning. To develop Technically competent young individuals with practical skills To create Socially conscious and morally upright global citizens."
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view_obj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/card_view_mission"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/objec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="OUR OBJECTIVES"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        />

                    <View
                        android:id="@+id/sp3"
                        android:layout_below="@id/objec"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#ffe203">

                    </View>
                    <me.biubiubiu.justifytext.library.JustifyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/objec"
                        android:id="@+id/obj_d1"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="  Continuous growth of our students through continuous growth of teachers To unleash the human potential within students by providing necessary forum for co- curricular and extra- curricular activities. Take efforts to introduce the students to the contemporary realities of the world. To maintain good academic standards through innovative and effective teaching and learning methods. To imbibe the students with ethically sound and socially useful values along with the curriculum and make them socially responsible citizens for a new India."/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
