<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragment.FragmentFloorInformation">
    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView_vision">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view_gf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/vision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="5sp"
                        android:text="Fifth Floor"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />

                    <View
                        android:layout_below="@id/vision"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#ffe203" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vision"
                        android:id="@+id/vision_d"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_margin="0dp"
                        android:padding="10dp"
                        android:text="M.Sc.IT Lab"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view_mission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/card_view_gf"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/mission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:paddingLeft="5sp"
                        android:text="Sixth Floor"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />

                    <View
                        android:layout_below="@id/mission"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#ffe203" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mission"
                        android:id="@+id/mission_d1"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="College and Principal Office"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view_obj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/card_view_mission"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/objec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:paddingLeft="5sp"
                        android:text="Seventh Floor"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />

                    <View
                        android:layout_below="@id/objec"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#ffe203" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/objec"
                        android:id="@+id/obj_d1"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="Gymkhana"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/third_fc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/card_view_obj"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/objec1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:paddingLeft="5sp"
                        android:text="Eighth Floor"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />
                    <View
                        android:layout_below="@id/objec1"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:background="#ffe203" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/objec1"
                        android:id="@+id/obj_d11"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="Classrooms"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
