<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/edittext_background">

            <TextView
                android:id="@+id/textview_notice_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice Headline"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_notice_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice Link"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textview_notice_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice Description"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />



            <TextView
                android:id="@+id/textview_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
            <TextView
                android:id="@+id/textview_notice_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice Time"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>